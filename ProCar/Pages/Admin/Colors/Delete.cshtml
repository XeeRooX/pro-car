@page "{id}"
@model ProCar.Pages.Admin.Colors.DeleteModel
@{
    Layout = "_Layout2";
}

<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
    <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
    </symbol>
</svg>

<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Admin/Index">Панель администратора</a></li>
        <li class="breadcrumb-item" aria-current="page"><a asp-page="/Admin/Colors/Index">Цвета автомобилей</a></li>
        <li class="breadcrumb-item active" aria-current="page">Удалить</li>
    </ol>
</nav>

<h2>Вы уверены?</h2>
<div class="alert alert-warning d-flex align-items-center" role="alert">
    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Warning:"><use xlink:href="#exclamation-triangle-fill" /></svg>
    <div>
        Внимание! При удалении цвета машины, цвет не будет выводиться в списке цветов автомобилей
    </div>
</div>
<form method="post">
    <input name="id" value="@RouteData.Values["id"]" class="d-none" />
    <button class="btn btn-primary" type="submit">Да</button>
    <a class="btn btn-secondary" asp-page="/Admin/Colors/Index">Нет</a>
</form>
