@page "{id}"
@model ProCar.Pages.Admin.Colors.EditModel
@{

}
<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Admin/Index">Панель администратора</a></li>
        <li class="breadcrumb-item" aria-current="page"><a asp-page="/Admin/Colors/Index">Цвета автомобилей</a></li>
        <li class="breadcrumb-item active" aria-current="page">Редактировать</li>
    </ol>
</nav>

<h2>Редактирование</h2>
<form method="post">
    <div class=" mb-3">
        <label class="form-label mb-1" for="name">Название</label>
        <input class="form-control" id="name" asp-for="Input.Name" value="@Model.LastName" maxlength="50" required />
        <input name="id" value="@RouteData.Values["id"]" class="d-none" />
    </div>
    <span asp-validation-for="Input.Name"></span>
    <div class="mt-2">
        <button type="submit" class="btn btn-primary">Сохранить</button>
        <a class="btn btn-secondary" asp-page="/Admin/Colors/Index">Назад</a>
    </div>
</form>
