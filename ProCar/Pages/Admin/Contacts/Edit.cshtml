@page
@model ProCar.Pages.Admin.Contacts.EditModel

@{
    ViewData["Title"] = "Edit";
}

<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Admin/Index">Панель администратора</a></li>
        <li class="breadcrumb-item" aria-current="page"><a asp-page="/Admin/SocialNetworks/Index">Социальные сети</a></li>
        <li class="breadcrumb-item active" aria-current="page">Редактировать</li>
    </ol>
</nav>

<h2>Редактирование</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ContactDetails.Id" />
            <div class="form-group">
                <label asp-for="ContactDetails.PhoneNumber" class="control-label"></label>
                <input asp-for="ContactDetails.PhoneNumber" class="form-control" />
                <span asp-validation-for="ContactDetails.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactDetails.Email" class="control-label"></label>
                <input asp-for="ContactDetails.Email" class="form-control" />
                <span asp-validation-for="ContactDetails.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactDetails.Address" class="control-label"></label>
                <input asp-for="ContactDetails.Address" class="form-control" />
                <span asp-validation-for="ContactDetails.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactDetails.MapPoint" class="control-label"></label>
                <input asp-for="ContactDetails.MapPoint" class="form-control" />
                <span asp-validation-for="ContactDetails.MapPoint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
