@page
@model ProCar.Pages.Admin.CarTypes.IndexModel
@{
    Layout = "_Layout2";
}
<h2>Добавить новый тип</h2>
<form method="post" asp-page="/Admin/CarTypes/Index">
    <div class="input-group mb-3">
        <input class="form-control" asp-for="Input.Name" required/>
        <button class="btn btn-primary" type="submit">Добавить</button>
    </div>
    <span asp-validation-for="Input.Name"></span>
    <span>@Model.ErrorMsg</span>
</form>
<h2>Список всех типов машин</h2>
<div class="table-responsive small">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">Название</th>
                <th scope="col">Действия</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model.CarTypes)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            <a asp-page="/Admin/CarTypes/Edit" asp-route-id="@item.Id">Редактировать</a>
                            <a asp-page="/Admin/CarTypes/Delete" asp-route-id="@item.Id">Удалить</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>