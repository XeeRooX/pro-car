@page 
@model ProCar.Pages.Admin.Cars.IndexModel
@{
}

<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Admin/Index">Панель администратора</a></li>
        <li class="breadcrumb-item active" aria-current="page">Автомобили</li>
    </ol>
</nav>

<h2>Список всех автомобилей</h2>
<p class="mt-3">
    Здесь Вы можете просмотреть уже существующую информацию об автомобиле. Также Вы можете отредактировать уже существующие данные или добавить новые
</p>
<a class="btn btn-secondary" asp-page="/Admin/Cars/Add">Добавить информацию об автомобиле</a>
<div class="table-responsive small mt-3">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">Марка</th>
                <th scope="col">Модель</th>
                <th scope="col">Стоимость (сутки)</th>
                <th scope="col">Год выпуска</th>
                <th scope="col">Действия</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model.AllCarsInfo)
                {
                    <tr>
                        <td>@item.Brand</td>
                        <td>@item.Model</td>
                        <td>@item.CostPerDay</td>
                        <td>@item.YearOfIssue</td>
                        <td>
                            <a asp-page="/Admin/Cars/Edit" asp-route-id="@item.Id">Редактировать</a> | 
                            <a asp-page="/Admin/Cars/Delete" asp-route-id="@item.Id">Удалить</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>